{
  "permissions": {
    "allow": [
      "Read(*)",
      "Write(*)",
      "Edit(*)",
      "MultiEdit(*)",
      "NotebookRead(*)",
      "NotebookEdit(*)",
      "Glob(*)",
      "Grep(*)",
      "LS(*)",
      "WebFetch(domain:github.com)",
      "Bash(grep:*)",
      "Bash(rg:*)",
      "Bash(find:*)"
    ],
    "deny": [
      "Bash(git commit:*)",
      "Bash(git push:*)",
      "Bash(git add:*)",
      "Bash(git merge:*)",
      "Bash(git rebase:*)",
      "Bash(git reset:*)",
      "Bash(git checkout:*)",
      "Bash(git branch:*)",
      "Bash(git tag:*)",
      "Bash(git clone:*)",
      "Bash(git remote:*)",
      "Bash(rm -rf /*)",
      "Bash(sudo:*)",
      "Bash(chmod 777:*)"
    ]
  },
  "fileOperations": {
    "autoApproveFileOperations": true,
    "requireConfirmationForFileChanges": false
  },
  "security": {
    "requireUserConfirmationForFileOperations": false,
    "requireUserConfirmationForBashOperations": true,
    "preventAutomaticGitActions": true
  },
  "ui": {
    "suppressFileChangeConfirmations": true,
    "autoApproveEdits": true
  }
}